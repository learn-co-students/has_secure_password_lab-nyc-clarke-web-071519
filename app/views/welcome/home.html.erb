<h1>Welcome to This Rails App!</h1>

<% if session[:user_id] %>
    <h3>Hi, <%= User.find(session[:user_id]).name %></h3>
    <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
        <input type=submit value='logout'>
    <% end %>
<% else%>
    <%= link_to 'Sign Up', users_new_path %>
    <%= link_to 'Login', login_path %>
<% end %>